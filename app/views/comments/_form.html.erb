	<% @location.comments.each do |comment| %>
<div class= "comment-display">
	<p>
		<strong>Name:</strong>
		<%= comment.commenter %>
	</p>

	<p>
		<strong>Comment:</strong>
		<%= comment.body %>
	</p>
</div>
<% end %>


<div class = "comment-form">
	<h1>weather wear?</h1>
	<%= form_for :comment, url: comment_url(id: @location), html: {class: 'submit-comment'} do |f| %>
	<p class="comment-name">
		<%= f.label :name %><br>
		<%= f.text_field :commenter %>
	</p>
	<p class="comment-body">
		<%= f.label :comment %><br>
		<%= f.text_area :body %>
	</p>
	<p class= "submit">
		<%= f.submit 'Submit' %>
	</p>
	<% end %>
</div>